<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.RNG">
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor"
        android:allowBackup="true">
        <activity android:name=".MainActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WheelOfRNGActivity" android:theme="@style/WheelTheme" android:label="@string/wheel_of_rng" android:screenOrientation="portrait" />
        <activity android:name=".DiceActivity" android:theme="@style/DiceTheme" android:label="@string/dice" android:screenOrientation="portrait" />
        <activity android:name=".RandomNumberActivity" android:theme="@style/RandomTheme" android:label="@string/random_number" android:screenOrientation="portrait" />
        <activity
            android:name=".SpinTheBottleActivity"
            android:theme="@style/SpinTheBottleTheme"
            android:label="@string/spin_the_bottle"
            android:screenOrientation="portrait" />
    </application>
</manifest>