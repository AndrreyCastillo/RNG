<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.RNG">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WheelOfRNGActivity"
            android:label="@string/wheel_of_rng"
            android:screenOrientation="portrait"
            android:theme="@style/WheelTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".DiceActivity"
            android:label="@string/dice"
            android:screenOrientation="portrait"
            android:theme="@style/DiceTheme" />
        <activity
            android:name=".RandomNumberActivity"
            android:label="@string/random_number"
            android:screenOrientation="portrait"
            android:theme="@style/RandomTheme" />
        <activity
            android:name=".SpinTheBottleActivity"
            android:label="@string/spin_the_bottle"
            android:screenOrientation="portrait"
            android:theme="@style/SpinTheBottleTheme" />
    </application>

</manifest>