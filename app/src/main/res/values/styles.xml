<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Activity Styles -->
    <style name="WheelTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorWheel</item>
        <item name="colorPrimaryDark">@color/colorWheel</item>
    </style>

    <style name="DiceTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorDice</item>
        <item name="colorPrimaryDark">@color/colorDice</item>
    </style>

    <style name="RandomTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorRandomNumber</item>
        <item name="colorPrimaryDark">@color/colorRandomNumber</item>
    </style>

    <style name="RandomPasswordTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorRandomPassword</item>
        <item name="colorPrimaryDark">@color/colorRandomPassword</item>
    </style>

</resources>
